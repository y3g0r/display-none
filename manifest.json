{
  "manifest_version": 2,
  "name": "Display None - Element Hider",
  "version": "1.0.0",
  "description": "Hide HTML elements on any webpage with undo/redo functionality",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Toggle Element Hider"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "display-none@element-hider.com",
      "strict_min_version": "109.0"
    }
  }
}
